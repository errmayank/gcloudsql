{
  "compilerOptions": {
    "target": "es2022",
    "module": "es2022",
    "strict": true,
    "strictNullChecks": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "declaration": false
  },
  "include": ["./src/**/*.ts"],
  "exclude": ["./node_modules"]
}
